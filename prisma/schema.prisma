generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}
model User {
  id        Int      @id @default(autoincrement())
  firstname String
  lastname String  
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
    posts     Post[] 
     comments  Comment[]  
}model Post {
  id        Int      @id @default(autoincrement())
  title     String
  views      Int      @default(0)
  fileId    String?
  authorId   Int     
  editorchoice Boolean @default(false)
  imgurl String
  author    User  @relation(fields: [authorId], references: [id]) // Many-to-one relationship with User
  createdAt DateTime @default(now())
comments  Comment[]
}

model Comment {
  id        Int       @id @default(autoincrement())
  content   String
  createdAt DateTime  @default(now())
  postId    Int
  userId    Int
  post      Post      @relation(fields: [postId], references: [id])
  user      User      @relation(fields: [userId], references: [id])
}